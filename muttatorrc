" muttatorrc for future generations

:set layout=vertical
:set gui=nomenu

let mapleader = ","

map / :emenu View.Toolbars.Quick Filter Bar<cr>

map <leader>fa :emenu Tools.Run Filters on Folder<cr>
map <leader>fs :emenu Tools.Run Filters on Message<cr>
map <C-]> :emenu View.Layout.Maximize Message Pane<cr>
mmap <C-]> :emenu View.Layout.Maximize Message Pane<cr>
map <C-[> :emenu View.Layout.Folder Pane<cr>
map <leader>F :emenu View.Layout.Folder Pane<cr>
mmap <leader>F :emenu View.Layout.Folder Pane<cr>
map čl :emenu Tools.Run Filters on Folder<cr>
map <leader>g :set guioptions=
map <leader>r :restart<cr>

map <leader>ig :goto Gmail: Gmail/Inbox<cr>
map <leader>ih :goto Hermes: Hermes/Inbox<cr>
map čig :goto Gmail: Gmail/Inbox<cr>
map čih :goto Hermes: Hermes/Inbox<cr>

mmap d :tabclose<cr>
map <leader>da :emenu File.Attachments.Save All…<cr>

map q :tabclose<cr>

" vim:   filetype=vim
