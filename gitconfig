; User config
[user]
    name = Ignas Anikevicius (gns_ank)
    email = anikevicius@gmail.com

[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

;Add aliases to your ~/.gitconfig file:
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    fp = format-patch
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files

[core]
    bare = false
    ;excludesfile = /home/ignas/.gitignore
    filemode = true
    logallrefupdates = true
    repositoryformatversion = 0
    ;pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

