{
  xthickness = 3
  ythickness = 3
}

style "candido-notebook" = "candido-wide"
{
  bg[NORMAL] = "#e2e3e4" # inner window background colour
  bg[ACTIVE] = "#d4d5d6" # out of focus tabs
}


style "candido-tasklist" = "candido-default"
{
  xthickness = 5
  ythickness = 3
}

style "candido-menu" = "candido-default"
{
  xthickness = 2
  ythickness = 1
  bg[NORMAL] = "#ecedee"
}

